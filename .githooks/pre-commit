#!/bin/bash
# Pre-commit hook: check formatting and run clippy with warnings-as-errors.
# Install via: just setup-hooks

echo "Running cargo fmt --check..."
if ! cargo fmt --all --check; then
    echo "❌ Formatting check failed. Run 'cargo fmt' to fix."
    exit 1
fi

echo "Running cargo clippy -- -D warnings..."
if ! cargo clippy --all-targets -- -D warnings; then
    echo "❌ Clippy check failed. Fix the warnings above."
    exit 1
fi

echo "✓ Pre-commit checks passed"
