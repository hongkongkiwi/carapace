#!/bin/bash
# Pre-commit hook: check formatting and clippy

set -e

echo "Running cargo fmt --check..."
cargo fmt --all --check
if [ $? -ne 0 ]; then
    echo "❌ Formatting check failed. Run 'cargo fmt' to fix."
    exit 1
fi

echo "Running cargo clippy..."
cargo clippy --all-targets --all-features -- -D warnings 2>/dev/null || cargo clippy --all-targets --all-features
if [ $? -ne 0 ]; then
    echo "❌ Clippy check failed. Fix the warnings above."
    exit 1
fi

echo "✓ Pre-commit checks passed"
